{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug compiled JS (dist/)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/dist/index.js",
            "args": [
                "${input:filePath}"
            ],
            "preLaunchTask": "tsc: build",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "sourceMaps": true,
            "console": "integratedTerminal"
        }
    ],
    "inputs": [
        {
            "id": "filePath",
            "type": "promptString",
            "description": "Enter path to file to validate",
            "default": "./test.jpg"
        }
    ]
}